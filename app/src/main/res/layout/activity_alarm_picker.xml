<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.h.alarmclock.AlarmPickerActivity">


    <TextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#000"
        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:id="@+id/current_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_text"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:textSize="24sp"
        android:text="6.00AM"
        android:focusable="true" />

    <View
        android:id="@+id/line1"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#eee"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/current_time_text"/>

    <TextView
        android:id="@+id/repeat_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:textColor="#000"
        android:text="Repeat" />

    <Spinner
        android:id="@+id/repeat_options_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeat_text"
        android:entries="@array/repeat_options"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        />

    <View
        android:id="@+id/line2"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#eee"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/repeat_options_spinner"/>

    <TextView
        android:id="@+id/snooze_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line2"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Snooze Button" />

    <Switch
        android:id="@+id/snooze_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/line2"
        android:theme="@style/SwitchTheme"
        android:checked="true"
        />

    <View
        android:id="@+id/line3"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#eee"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/snooze_switch"

        />

    <TextView
        android:id="@+id/motivation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line3"
        android:textSize="18sp"
        android:layout_toStartOf="@id/motivation_switch"
        android:textColor="#000"
        android:text="Motivation" />

    <Switch
        android:id="@+id/motivation_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/line3"
        android:theme="@style/SwitchTheme"
        android:checked="true"
        />

    <TextView
        android:id="@+id/motivation_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/motivation_text"
        android:layout_toStartOf="@id/motivation_switch"
        android:text="Show a motivational image after you dismiss the alarm" />


</RelativeLayout>
